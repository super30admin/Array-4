//TC:- O(N)
//SC:- O(N)

class Solution {
    public int maxSubArray(int[] nums) {
        
        int sumTillNow = 0;
        int maxSum = nums[0];
        
        for(int i = 0; i < nums.length; i++)
        {
            sumTillNow = sumTillNow + nums[i];
            
            if(sumTillNow > maxSum)
            {
                maxSum = sumTillNow; 
            }
            
            if(sumTillNow < 0)
            {
                sumTillNow = 0;
            }
        }
        
        return maxSum;
    }
}
